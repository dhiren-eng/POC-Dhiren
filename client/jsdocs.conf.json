{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./src"]
    },
    "plugins": [
        "plugins/markdown",
        "better-docs/component",
        "better-docs/category"
    ],
     "templates": {
        "default":{
            "search": true
        },
      "better-docs": {
          "name": "My React components"
        }
    },
    "opts": {
        "destination": "docs",
        "recurse": true,
        "readme": "README.md",
        "template": "better-docs"
    }
}